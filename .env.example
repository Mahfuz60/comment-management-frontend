# Backend API base URL
VITE_API_BASE_URL=http://localhost:4000

# Auth mode:
# - "cookie" => JWT in httpOnly cookie, frontend does NOT store token
# - "header" => backend returns token, frontend stores token in memory+redux and sends Authorization header
VITE_AUTH_MODE=cookie

# Optional realtime via socket.io
VITE_ENABLE_SOCKET=false
VITE_SOCKET_URL=http://localhost:4000

# Optional threaded replies
VITE_ENABLE_REPLIES=true
